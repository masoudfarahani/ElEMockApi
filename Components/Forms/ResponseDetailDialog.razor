@using ELE.MockApi.Core.Models
@using ELE.MockApi.Core.Service
@using ELE.MockApi.Core.FormModels
@using MudBlazor
@using ELE.MockApi.Core.Models
@inject IDialogService DialogService
@rendermode InteractiveServer


<MudDialog>
    <DialogContent>

        <MudText Typo="Typo.body1">HTTP Status: @Response.Status</MudText>
        <MudText Typo="Typo.body1" Class="mt-2">Response Body:</MudText>
        <MudPaper Class="pa-4 mt-2" Style="max-height: 400px; overflow-y: auto;">
            <pre><code>@Response.Body</code></pre>
        </MudPaper>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="Cancel">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; }
    [Parameter] public AvailableResponse Response { get; set; }


    void Cancel() => MudDialog.Cancel();
}
